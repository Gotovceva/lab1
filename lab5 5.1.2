import math
def calculate_area(a, b, c):
    if a + b <= c or a + c <= b or b + c <= a:
        return "Треугольника с такими сторонами не существует"
    p = (a + b + c)/2
    area = math.sqrt(p * (p-a) * (p-b) * (p-c))
    return area
def compare(a1, b1, c1, a2, b2, c2):
    area1 = calculate_area(a1, b1, c1)
    area2 = calculate_area(a2, b2, c2)
    if area1 > area2:
        return "Первый треугольник имеет большую площадь"
    elif area2 > area1:
        return "Второй треугольник имеет большую площадь"
    else:
        return "Площади треугольников равны "     
